{% extends 'main.html.twig' %}

{% block body %}
    <h1 id="categoryName">{{ category.categoryName }}</h1>
    <div id="questions">
    <ul id="questionList">
        {% for question in questions|sortbyfield('question') %}
              <li data-slug="{{ question.Slug }}" data-category-slug="{{ question.categoryName.slug }}">
                  {{ question.question }}
              </li>

        {% endfor %}
        {% if is_granted('ROLE_MANAGER') %}
            <a class="btn btn-info" style="margin-top: 10px" href="{{ path('faq_edit', { 'categorySlug': category.slug }) }}">Redaguoti</a>
            {{ form_start(delete_form) }}
            <input type="submit" value="Trinti" class="btn btn-danger" style="margin-top: 10px" >
            {{ form_end(delete_form) }}
        {% endif %}
    </ul>

    </div>
    <div id="answers">
    </div>

{% endblock %}

{% block javascripts %}

    <script>
        $('#questions').height(300).split({
            orientation: 'horizontal',
            limit: 0,
            position: '100%',
            percent: true

        });
        $('#questionList li').on('click', function(){
            var categorySlug = $(this).data('category-slug');
            var questionSlug = $(this).data('slug');
            $('#answers').load('http://helper/category/'+categorySlug+'/'+questionSlug);
        });
    </script>
{% endblock %}